<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/tvLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="오늘은 yyyy년 MM월 dd일," />

            <TextView
                android:id="@+id/tvLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="sleep" />

            <TextView
                android:id="@+id/tvLine3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="weather" />

            <TextView
                android:id="@+id/tvHashTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hashtag" />
        </LinearLayout>
    </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/map_View"
            android:layout_width="367dp"
            android:layout_height="352dp"
            android:layout_gravity="bottom">

        </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>